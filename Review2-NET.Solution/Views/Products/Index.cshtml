@{Layout="_Layout";}
@model IEnumerable<Review2_NET.Models.Product>

<ul>
    <li>@Html.ActionLink("Add Product","Create","Products")</li>
</ul>

<h5>@Html.DisplayNameForModel()</h5>
<ol>
    @foreach(var product in Model)
    {
        <li><p>@Html.DisplayFor(model=>product.Name) : @Html.ActionLink("Info","Details","Products",new {id = product.ProductId}) : @Html.ActionLink("Edit","Update","Products",new {id = product.ProductId}) : @Html.ActionLink("Delete","Delete","Products",new {id = product.ProductId})<p>
            <p>@Html.ActionLink("Write a review","Create","Reviews",new {productId=product.ProductId}) ||  @Html.ActionLink("See reviews and ratings","ProductReviews","Reviews",new {productId=product.ProductId})</p></li>
    }
</ol> 
            